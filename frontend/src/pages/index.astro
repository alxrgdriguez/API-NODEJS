---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Series">
	<main class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
		<div
			class="max-w-sm w-full bg-white rounded-lg overflow-hidden shadow-lg transition-all duration-300 hover:shadow-xl">
			<div class="relative">
				<img class="w-full h-[440px] object-fit" src="/img/1.jpg" alt="Series Image">
				<div
					class="absolute top-0 right-0 bg-black bg-opacity-75 text-white px-2 py-1 m-2 rounded text-sm font-semibold">
					MINISERIE
				</div>
			</div>
			<div class="p-4">
				<h2 class="font-bold text-xl mb-2 text-gray-800">The Crown</h2>
				<p class="text-gray-600 text-sm mb-4">
					A historical drama that follows the life of Queen Elizabeth II from the 1940s to modern times.
				</p>
				<div class="flex justify-between items-center mb-4">
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">Historical
                    Drama</span>
					<div class="flex items-center">
						<svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"
							 xmlns="http://www.w3.org/2000/svg">
							<path
								d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
							</path>
						</svg>
						<p class="ml-1 text-sm font-bold text-gray-700">4.5</p>
						<span class="w-1 h-1 mx-1.5 bg-gray-500 rounded-full"></span>
						<p class="text-sm font-medium text-gray-600">5.0</p>
					</div>
				</div>
				<div class="flex items-center justify-between">
					<button
						class="px-4 py-2 bg-blue-500 text-white text-sm font-semibold rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition-colors duration-300">
						Votar
					</button>
					<button
						class="px-4 py-2 bg-red-600 text-white text-sm font-semibold rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition-colors duration-300">
						MÃ¡s info
					</button>
				</div>
			</div>
		</div>


	</main>
</Layout>
