---
import LayoutSecundario from "../layouts/LayoutSecundario.astro";
import Input from "../components/form/Input.astro";
---

<LayoutSecundario title="Login">

    <div class="bg-gradient-to-br from-blue-100 to-indigo-100 min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden">
            <div class="p-8">
                <div class="text-center mb-8">
                    <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Login</h2>
                    <p class="mt-2 text-sm text-gray-600">Ingrese sus datos para iniciar sesión</p>
                </div>
                <form class="space-y-6">
                    <Input label="Correo electrónico" id="email" type="email" icono="fas fa-envelope" placeholder="correo@ejemplo.com"/>
                    <Input label="Contraseña" id="password" type="password" icono="fas fa-lock" placeholder="********"/>
                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                            Iniciar sesión
                        </button>
                    </div>
                </form>

                <div class="px-8 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-center">
                    <p class="text-xs leading-5 text-gray-500">
                        ¿No tienes una cuenta?
                        <a href="/registro" class="font-medium text-blue-600 hover:text-blue-500 transition ease-in-out duration-150">
                            Regístrate
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</LayoutSecundario>