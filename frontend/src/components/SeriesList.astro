---
import LayoutSecundario from '../layouts/LayoutSecundario.astro';
---

<LayoutSecundario title="Series">
    <main class="bg-gray-100 min-h-screen flex flex-col items-center p-8">
        <!-- Contenedor principal -->
        <div class="max-w-7xl w-full grid grid-cols-1 sm:grid-cols-4 md:grid-cols-4 lg:grid-cols-4 gap-8">
            <!-- Tarjeta de Serie -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform transform hover:scale-105 duration-300">
                <div class="relative">
                    <!-- Imagen con mejor proporción -->
                    <div class="w-full aspect-[4/5] bg-gray-200">
                        <img class="w-full h-full object-cover" src="/img/1.jpg" alt="Serie Imagen">
                    </div>
                    <div class="absolute top-2 left-2 bg-black bg-opacity-60 text-white px-2 py-1 rounded-md text-sm font-semibold">
                        MINISERIE
                    </div>
                </div>
                <div class="p-4">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2 truncate">The Crown</h3>
                    <p class="text-gray-700 text-sm mb-4 truncate">A historical drama that follows the life of Queen Elizabeth II from the 1940s to modern times.</p>
                    <span class="text-xs font-semibold bg-blue-100 text-blue-600 px-2 py-1 rounded-full">Historical Drama</span>
                    <div class="flex items-center mt-3">
                        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                        <p class="text-sm text-gray-700 font-bold ml-2">4.5</p>
                    </div>
                    <div class="flex justify-between mt-4">
                        <button class="px-4 py-2 bg-blue-600 text-white text-xs font-semibold rounded-full hover:bg-blue-700 transition duration-200">
                            Votar
                        </button>
                        <button class="px-4 py-2 bg-red-600 text-white text-xs font-semibold rounded-full hover:bg-red-700 transition duration-200">
                            Más Info
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </main>



</LayoutSecundario>
